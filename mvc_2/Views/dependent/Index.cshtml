@{

    int index = 1;
}
@model List<Dependent>

<a href="/Dependent/Add">Add Dependent</a>
<table>
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Dependent in Model)
        {
            <tr>
                <td>@(index++)</td>
                <td>@Dependent.Name</td>
                <td><a href="/Dependent/GetById/@Dependent.ESSN">Details</a></td>
                <td><a href="/Dependent/Edit/@Dependent.id">Edit</a></td>
                <td><a href="/Dependent/delete/@Dependent.id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

