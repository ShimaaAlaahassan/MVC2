@{
}

@model List<project>

<form action="/workOn/AddEmployeesToProjectsToDB">
    <label>Choose Project</label>
    <select id="projectNum" name="Projects" multiple>
        <option value="">Choose Project</option>
        @foreach (var project in Model)
        {
            <option value="@project.Number">@project.Name</option>
        }
    </select>

    <label>Choose Employees</label>
    <select id="ESSN" name="Employees" multiple>
        <option value="">Choose Employees</option>
        @foreach (var employee in ViewBag.emps)
        {
            <option value="@employee.SSN">@(employee.FirstName + " " + employee.LastName)</option>
        }
    </select>

    <label>Hours</label>
    <input id="Hours" name="Hours" type="text" />

    <input type="submit" value="Add" />
</form>

