@model workOn

<h1>Edit Employee Projects Works Hour</h1>

<form asp-action="EditEmployeeHourDb" asp-controller="WorksOnProject" method="post">

    <div class="form-group">
        <label asp-for="ESSN"></label>
        <select asp-for="ESSN" asp-items="ViewBag.employees" class="form-control">
            <option>Choose Employee</option>
        </select>
    </div>
    <div class="form-group" id="projectsArea">
        <label asp-for="projectNum"></label>
        <select asp-for="projectNum" class="form-control">
            <option>Choose Project</option>
        </select>    
    </div>
    <div class="form-group" id="HourArea">
        <label asp-for="Hours"></label>
        <input asp-for="Hours" class="form-control" />
    </div>

    <input type="submit" value="Edit" />
</form>

@section Scripts{
 
    <script src="/js/EditEmployeeHour.js"></script>
}